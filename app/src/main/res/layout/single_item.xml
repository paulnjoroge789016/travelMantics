<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/cardView">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="219dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Town"
                    android:textSize="25sp"
                    android:ems="10"
                    android:id="@+id/town"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp" app:layout_constraintStart_toEndOf="@+id/imageView2"
                    android:layout_marginStart="22dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.526"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
            <ImageView
                    android:layout_width="110dp"
                    android:layout_height="116dp"
                    tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/displayImageView"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Description"
                    android:textSize="20sp"
                    android:ems="10"
                    android:id="@+id/description"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/town"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    app:layout_constraintEnd_toEndOf="@+id/town" android:layout_marginStart="6dp"
                    app:layout_constraintStart_toStartOf="@+id/town"/>
            <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="Cost"
                    android:ems="10"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    android:id="@+id/cost"
                    app:layout_constraintTop_toBottomOf="@+id/description"
                    app:layout_constraintStart_toEndOf="@+id/imageView2" android:layout_marginStart="105dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>