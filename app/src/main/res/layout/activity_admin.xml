<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AdminActivity">
    <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Town"
            android:ems="10"
            android:id="@+id/townEditText" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="43dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="56dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Cost"
            android:ems="10"
            android:id="@+id/costEditText" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/townEditText"
            app:layout_constraintStart_toStartOf="@+id/townEditText" app:layout_constraintEnd_toEndOf="@+id/townEditText"
            app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Description"
            android:ems="10"
            android:id="@+id/descrioptionEdtText"
            app:layout_constraintStart_toStartOf="@+id/costEditText" app:layout_constraintEnd_toEndOf="@+id/costEditText"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/costEditText"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="SELECT IMAGE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selectImage" android:layout_marginTop="53dp"
            app:layout_constraintTop_toBottomOf="@+id/descrioptionEdtText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="145dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="146dp"/>
    <ImageView
            android:layout_width="300dp"
            android:layout_height="175dp" tools:srcCompat="@color/common_google_signin_btn_text_dark_disabled"
            android:id="@+id/dealImageView" android:layout_marginTop="59dp"
            app:layout_constraintTop_toBottomOf="@+id/selectImage" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="56dp"/>
</android.support.constraint.ConstraintLayout>